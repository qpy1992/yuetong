<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/shuliang"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/bottom_button_text_black"/>

                <EditText
                    android:id="@+id/et_shuliang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="number|numberDecimal"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/danjia"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/bottom_button_text_black"/>

                <EditText
                    android:id="@+id/et_danjia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="number|numberDecimal"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/qi"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/bottom_button_text_black"/>

                <TextView
                    android:id="@+id/tv_qi_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:textSize="16sp"
                    android:hint="@string/select"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/zhi"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/bottom_button_text_black"/>

                <TextView
                    android:id="@+id/tv_zhi_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:textSize="16sp"
                    android:hint="@string/select"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/progress"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/bottom_button_text_black" />

                <TextView
                    android:id="@+id/tv_progress_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:hint="@string/select"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/plan"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/bottom_button_text_black" />

                <TextView
                    android:id="@+id/tv_plan_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/budget"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/bottom_button_text_black"/>

                <TextView
                    android:id="@+id/tv_budget_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/pbudget"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/bottom_button_text_black"/>

                <TextView
                    android:id="@+id/tv_pbudget_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/note"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/bottom_button_text_black"/>

                <EditText
                    android:id="@+id/et_note"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:background="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/jinehs"
                    android:textSize="16sp"
                    android:textColor="@color/bottom_button_text_black"/>
                <EditText
                    android:id="@+id/et_hanshui"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:singleLine="true"
                    android:background="@null"
                    android:inputType="number|numberDecimal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/rmb"
                    android:textSize="16sp"
                    android:textColor="@color/bottom_button_text_black"/>
                <EditText
                    android:id="@+id/et_buhan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="number|numberDecimal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/sup"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/bottom_button_text_black"/>
                <TextView
                    android:id="@+id/tv_fuzhu_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/supl"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/bottom_button_text_black"/>
                <EditText
                    android:id="@+id/et_fuliang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:inputType="number|numberDecimal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/send"
                    android:gravity="center_vertical"
                    android:textColor="@color/bottom_button_text_black"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/et_fasong"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:background="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/receive"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/bottom_button_text_black"/>
                <EditText
                    android:id="@+id/et_huikui"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="right|center_vertical"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:background="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/point"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/bottom_button_text_black"/>
                <TextView
                    android:id="@+id/tv_pingfen_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:hint="@string/select"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/submit"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/tv_submit"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>